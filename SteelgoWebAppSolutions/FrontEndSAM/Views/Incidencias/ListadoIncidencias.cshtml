    function AccionesListado() {
        //loadingStart();
        var Listado;
        Listado = ArregloListado();

        $folioEntradaMaterial.Listado.read({  data: JSON.stringify(Listado) }).done(function (data) {
            if (Error(data)) {
                resultadoJson = data;
                if ($("#grid").data("kendoGrid")) {
                    if (resultadoJson.length > 0) {
                        $("#grid").data("kendoGrid").dataSource.data(dataparser(resultadoJson));
                        $("#grid").data("kendoGrid").dataSource.sort([{field:"FolioOriginalID",dir:"asc"}]);
                        $("#grid").data("kendoGrid").dataSource.page(1);
